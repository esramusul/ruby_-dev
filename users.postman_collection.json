{
  "info": {
    "name": "Users API (Local)",
    "_postman_id": "b8aaf7e0-7a0e-4b0a-9b3d-6c8a5c18c1c1",
    "description": "Postman collection for http://127.0.0.1:3000/api/v1/users. Update authToken, userId, and bodies as needed.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:3000" },
    { "key": "authToken", "value": "" },
    { "key": "userId", "value": "64f4c0e2b2a5f3a1cdef1234" }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      { "key": "token", "value": "{{authToken}}", "type": "string" }
    ]
  },
  "item": [
    {
      "name": "List Users",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users?limit=10&page=1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users"],
          "query": [
            { "key": "limit", "value": "10" },
            { "key": "page", "value": "1" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get User by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "{{userId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Ada Lovelace\",\n  \"email\": \"ada@example.com\",\n  \"password\": \"Str0ngP@ss!\",\n  \"role\": \"user\",\n  \"active\": true\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/users",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users"]
        }
      },
      "response": []
    },
    {
      "name": "Update User (PUT)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Ada L.\",\n  \"email\": \"ada@example.com\",\n  \"role\": \"admin\",\n  \"active\": true\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "{{userId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Partial Update (PATCH)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"role\": \"user\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "{{userId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "{{userId}}"]
        }
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test('Status code is 2xx', function () {",
          "  pm.expect(pm.response.code).to.be.within(200, 299);",
          "});"
        ]
      }
    }
  ]
}

